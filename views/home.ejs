
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <div>
      <h1><%=post.title%> 
        <form action="/delete" method="post">
          <button type="submit" name="del" class="del" value="<%=post._id%>"> <i class="fa-solid fa-trash"></i> </button>
        </form> 
      </h1>
    </div>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>
  
  <% }) %>

  <div>
    <form action="/compose" method="get">
      <button type="submit" class="btn btn-outline-success compose">Compose</button>
    </form>
  </div>


<%- include("partials/footer"); -%>
